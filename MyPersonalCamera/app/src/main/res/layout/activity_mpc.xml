<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MPCActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter name of picture: "
        android:textSize="20dp"
        android:background="#80FFFFFF"
        android:focusableInTouchMode="true"
        android:layout_above="@+id/edit_text"
        android:textColor="#ff1f1f1f"
        android:layout_toStartOf="@+id/load_button" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="129dp"
        android:background="@drawable/round_rect_shape"
        android:layout_above="@+id/camera_button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/load_button"
        android:textAlignment="center"/>

    <ImageButton
        android:id="@+id/camera_button"
        android:src="@drawable/image_button"
        android:background="#00FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/load_button"
        android:src="@drawable/open"
        android:background="#00FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/camera_button"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</RelativeLayout>
